extends base.pug

block scripts 
    script(src='/static/index.js')

block style 
    style 
        include ../static/style.css 
        include ../static/stylecontact.css 

block content 
    div.form-div
        h1 Contact our sales team 
        h3 Our team is happy to answer your sales question. Fill the form and we will be in touch as soon as possible
        form(action="/contact", method="post", class="myForm")
            div.formgroup
                label(for="name",)|Your name
                input(type="text", class="myInput",id="form-name", name="name",placeholder="Dave")
            div.formgroup
                label(for="phone")|Phono No
                input(type="phone", class="myInput",id="form-phone", name="phone",placeholder="00000-00000")
            div.formgroup
                label(for="email")|Your email
                input(type="email", class="myInput",id="form-email", name="email",placeholder="dave01@gamil.com")
            div.formgroup
                label(for="address")|Your address
                input(type="text", class="myInput",id="form-address", name="address",placeholder="United States of America")
            div.formgroup
                label(for="concern")|Your Concern
                input(type="text", class="myInput",id="form-concern", name="concern",placeholder="We are always for your service")
            button#form-btn
                |Contact Sales  

            